# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/counterfit_db"

# Stripe Payment
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Yoco Payment Gateway
NEXT_PUBLIC_YOCO_PUBLIC_KEY=pk_test_your_yoco_public_key
YOCO_SECRET_KEY=sk_test_your_yoco_secret_key
YOCO_WEBHOOK_SECRET=whsec_your_yoco_webhook_secret

# Email Service (for order confirmations)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@counterfit.co.za

# Admin Configuration
ADMIN_EMAIL=admin@counterfit.co.za

# CMS/Content Management
SANITY_PROJECT_ID=your_sanity_project_id
SANITY_DATASET=production
SANITY_API_TOKEN=your_sanity_api_token

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
