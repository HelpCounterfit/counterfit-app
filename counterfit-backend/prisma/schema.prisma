// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      String   @default("USER")
  avatar    String?
  wishlist  String[] // Array of product IDs
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Product {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  description     String
  shortDescription String?
  price           Float
  comparePrice    Float?
  costPrice       Float?
  stockCode       String?
  sku             String?
  barcode         String?
  category        String
  status          String   @default("draft")
  featured        Boolean  @default(false)
  isNew           Boolean  @default(false)
  isAvailable     Boolean  @default(true)
  images          Json     // Array of image objects
  sizes           Json     // Array of size objects
  colors          Json     // Array of color objects
  inventory       Json     // Inventory object
  shipping        Json?    // Shipping object
  seo             Json?    // SEO object
  totalStock      Int?
  salesCount      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Collection {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  description String?
  image     String?
  featured  Boolean  @default(false)
  status    String   @default("draft")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  orderNumber String   @unique // e.g., "ORD-202412-0001"
  items       Json     // Array of order items
  totalAmount Float
  status      String   @default("pending") // pending, confirmed, processing, shipped, delivered, cancelled
  paymentStatus String @default("pending") // pending, paid, failed, refunded
  paymentMethod String? // yoco, card, etc.
  paymentId   String?  // Yoco payment ID
  trackingNumber String? // Unique tracking number
  carrier     String?  // Delivery company (PostNet, etc.)
  estimatedDelivery DateTime?
  shippingAddress Json // Shipping address object
  billingAddress Json? // Billing address object
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
